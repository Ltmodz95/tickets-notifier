<%= form_with model: ticket do |f|%>
    <div>
        <%= f.label :title%>
        <%= f.text_field :title%>
    </div>

    <div>
        <%= f.label :description%>
        <%= f.text_area :description%>
    </div>

    <div>
        <%= f.label :due_date%>
        <%= f.datetime_field :due_date%>
    </div>
    <div>
        <%= f.label :assignee%>
        <%= f.select :user_id, users%>
    </div>
    <div>
        <ul>
            <% ticket.errors.full_messages.each do |error|%>
                <li><%=error%></li>
            <%end%>
        </ul>
    </div>

    <%= f.submit 'Add Ticket'%>
<%end%>